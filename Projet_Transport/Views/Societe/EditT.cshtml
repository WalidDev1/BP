@{ Layout = "~/Views/Shared/_Layout.cshtml"; }



<!-- Begin Page Content -->
<body class="bg-gradient-light">
    <div class="container">
        <div class="alert-warning center-block">@ViewBag.erreur </div>
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Modifier trajet !</h1>
                            </div>
                            <form action="" method="post">
                                <!-- calsse user badelha ² -->

                                <div class="form-group">
                                    <label>Date depart </label>
                                    @Html.TextBox("Date_depart", null, new { @Class = "form-control", Type = "datetime-local" })
                                </div>
                                <div class="form-group">
                                    <label>Date arrivee </label>
                                    @Html.TextBox("Date_arrive", null, new { @Class = "form-control", Type = "datetime-local" })
                                </div>
                                <div class="form-group">
                                    <label fo>prix </label>
                                    @Html.TextBox("prix", null, new { @Class = "form-control" })
                                </div>

                                <div class="form-group">
                                    <label>ville_depart</label>
                                    <select name="id_ville_depart" class="form-control ">
                                        <option selected> @ViewBag.ville_depart</option>
                                        @if (ViewBag.listeville != null)
                                        {
                                            foreach (var vil in ViewBag.listeville)
                                            {
                            <option value="@vil.id">@vil.nomVille  </option>}
                                        }

                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>ville_arrivee</label>
                                    <select name="id_ville_arrive" class="form-control ">
                                        <option selected> @ViewBag.ville_arrive </option>
                                        @if (ViewBag.listeville != null)
                                        {
                                            foreach (var vil in ViewBag.listeville)
                                            {
                            <option value="@vil.id">@vil.nomVille  </option>}
                                        }

                                    </select>
                                </div>



                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary" name="lil" value="Modifier" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

}